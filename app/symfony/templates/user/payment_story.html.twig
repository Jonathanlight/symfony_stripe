{% extends 'base.html.twig' %}

{% block body %}
    <!--Main layout-->
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">
            <div class="card mb-4 wow fadeIn">
                <div class="card-body d-sm-flex justify-content-between">
                    <h4 class="mb-2 mb-sm-0 pt-1">
                        <span> Historique des commandes  -  Total des commandes : <b>{{ sumOrder|number_format(2, ',', '.') }} €</b></span>
                    </h4>
                </div>
            </div>

            <div class="row text-center wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col" colspan="2">{{ 'order.reference'|trans }}</th>
                                        <th scope="col">{{ 'order.name'|trans }}</th>
                                        <th scope="col">{{ 'order.price'|trans }}</th>
                                        <th scope="col">{{ 'order.brandStripe'|trans }}</th>
                                        <th scope="col">{{ 'order.last4Stripe'|trans }}</th>
                                        <th scope="col">{{ 'order.statusStripe'|trans }}</th>
                                        <th scope="col">{{ 'order.createdAt'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td> <img src="{{ order.product.image }}" alt="..." class="img-thumbnail" style="width: 150px;">  </td>
                                        <td>{{ order.reference }}</td>
                                        <td>{{ order.product.name }}</td>
                                        <td>{{ order.price|number_format(2, ',', '.') }} €</td>
                                        <td>{{ order.brandStripe }}</td>
                                        <td>{{ order.last4Stripe }}</td>
                                        <td><span class="badge badge-success">{{ order.statusStripe }}</span></td>
                                        <td>{{ order.createdAt|date('l d/m/Y h:i:s') }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
{% endblock %}